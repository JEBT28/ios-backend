generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Alumnos {
  idAlumno        Int          @id @default(autoincrement())
  numControl      String       @db.VarChar(8)
  nombre          String       @db.VarChar(30)
  apellidos       String       @db.VarChar(30)
  sexo            Alumnos_sexo
  semestre        Int          @db.TinyInt
  carrera         String       @db.VarChar(50)
  especialidad    String?      @db.VarChar(50)
  fechaNacimiento DateTime     @db.Date
  createdAt       DateTime?    @default(now()) @db.DateTime(0)
  updatedAt       DateTime?    @default(now()) @db.DateTime(0)
  status          Boolean?     @default(true)
}

model Materias {
  idMateria Int       @id @default(autoincrement())
  nombre    String?   @db.VarChar(30)
  carrera   String?   @db.VarChar(30)
  createdAt DateTime? @default(now()) @db.DateTime(0)
  updatedAt DateTime? @default(now()) @db.DateTime(0)
  status    Boolean?  @default(true)
}

model Usuarios {
  idUsuario  Int     @id @default(autoincrement())
  usuario    String  @db.VarChar(30)
  nombre     String  @db.VarChar(30)
  apellido   String  @db.VarChar(30)
  status     Boolean @default(true)
  contrasena String  @db.VarChar(80)
}

enum Alumnos_sexo {
  F
  M
}
